<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:MaxwellCalc.Controls">
	<Design.PreviewWith>
		<controls:FormattedQuantity />
	</Design.PreviewWith>

	<Style Selector="controls|FormattedQuantity">
		<Setter Property="FontFamily" Value="{DynamicResource ResultFontFamily}"/>
		
		<!-- Set Defaults -->
		<Setter Property="Template">
			<ControlTemplate>
				<SelectableTextBlock Name="OutputBlock" />
			</ControlTemplate>
		</Setter>
	</Style>
</Styles>
