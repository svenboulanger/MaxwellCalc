<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="140"
        Width="400" Height="120"
		xmlns:controls="using:MaxwellCalc.Controls"
        x:Class="MaxwellCalc.Controls.ErrorMessageBox"
        Title="Error">
  <Grid RowDefinitions="*, auto">
    <Grid ColumnDefinitions="auto, *" Grid.Row="0">
      <PathIcon
        Grid.Column="0"
        Margin="10"
        Width="48"
        Height="48"
        Foreground="Red"
        Data="{StaticResource warning}" />
      <SelectableTextBlock
        Grid.Column="1"
        VerticalAlignment="Center"
        HorizontalAlignment="Center"
        Name="MessageBlock"
        Text="Message"
        />
    </Grid>
    <Grid ColumnDefinitions="*,auto,*" Grid.Row="1" Margin="20">
      <Button
        Grid.Column="1"
        Content="OK"
        />
    </Grid>
  </Grid>
</Window>
