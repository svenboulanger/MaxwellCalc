<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:MaxwellCalc.Controls"
		xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia">
	<Design.PreviewWith>
		<controls:CopyableQuantity />
	</Design.PreviewWith>

	<Style Selector="controls|CopyableQuantity">
		<!-- Set Defaults -->
		<Setter Property="Template">
			<ControlTemplate>
				<StackPanel Orientation="Horizontal">
					<controls:FormattedQuantity Name="OutputBlock"
												VerticalAlignment="Center"
												Margin="3"
												Padding="0" />
					<Button Classes="Outline Dark"
							Padding="5"
							Margin="1"
							Background="Transparent"
							Content="{materialIcons:MaterialIconExt Kind=ContentCopy}"
							Name="CopyOutputButton" />
				</StackPanel>
			</ControlTemplate>
		</Setter>
	</Style>
</Styles>
