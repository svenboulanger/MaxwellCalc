<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:MaxwellCalc.ViewModels"
			 xmlns:my="using:MaxwellCalc.Views"
			 xmlns:controls="using:MaxwellCalc.Controls"
			 xmlns:material="clr-namespace:Material.Styles.Controls;assembly=Material.Styles"
			 xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
			 x:DataType="vm:ConstantsViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MaxwellCalc.Views.ConstantsView">
	<Design.DataContext>
		<vm:ConstantsViewModel />
	</Design.DataContext>
	<DockPanel>
		<material:Card DockPanel.Dock="Top"
					   Margin="5"
					   Padding="5">
			<TextBox Watermark="Search"
					 Height="20"
					 Text="{Binding Filter}" />
		</material:Card>

		<material:Card DockPanel.Dock="Bottom"
					   Name="Input"
					   Margin="5">
			<FlyoutBase.AttachedFlyout>
				<Flyout ShowMode="Transient">
					<ItemsControl ItemsSource="{Binding Diagnostics}">
						<ItemsControl.ItemTemplate>
							<DataTemplate>
								<TextBlock Text="{Binding}"
										   Foreground="Red" />
							</DataTemplate>
						</ItemsControl.ItemTemplate>
					</ItemsControl>
				</Flyout>
			</FlyoutBase.AttachedFlyout>
			<Grid ColumnDefinitions="150, 300, *, 50">
				<TextBox Text="{Binding ConstantName}"
						 Watermark="Constant"
						 Margin="5"
						 Grid.Column="0"/>
				<TextBox Text="{Binding Expression}"
						 Watermark="Expression"
						 Margin="5"
						 Grid.Column="1">
					<TextBox.KeyBindings>
						<KeyBinding Command="{Binding AddConstantCommand}" Gesture="Enter" />
					</TextBox.KeyBindings>
				</TextBox>
				<TextBox Text="{Binding Description}"
						 Watermark="Description"
						 Margin="5"
						 Grid.Column="2">
					<TextBox.KeyBindings>
						<KeyBinding Command="{Binding AddConstantCommand}" Gesture="Enter" />
					</TextBox.KeyBindings>
				</TextBox>
				<Button Content="{materialIcons:MaterialIconExt Kind=Add}"
						VerticalAlignment="Center"
						Command="{Binding AddConstantCommand}"
						Grid.Column="3" />
			</Grid>
		</material:Card>

		<material:Card Margin="5">
			<DockPanel>
				<DockPanel.ContextMenu>
					<ContextMenu>
						<MenuItem Header="Remove selected items" Command="{Binding RemoveSelectedItemsCommand}" />
						<MenuItem Header="Remove all items" Command="{Binding RemoveAllItemsCommand}" />
						<Separator />
						<MenuItem Header="Add common constants" Command="{Binding AddCommonConstantsCommand}" />
					</ContextMenu>
				</DockPanel.ContextMenu>
				<Border BorderThickness="0,0,0,1"
						BorderBrush="{DynamicResource MaterialPrimaryLightBrush}"
						Margin="0,0,0,5"
						DockPanel.Dock="Top">
					<Grid ColumnDefinitions="40, 150, 300, *, 50">
						<CheckBox Margin="5"
								  VerticalAlignment="Center"
								  IsChecked="{Binding IsHeaderChecked}" />
						<TextBlock Text="Parameter"
								   FontWeight="Bold"
								   Margin="5"
								   Grid.Column="1"
								   VerticalAlignment="Center" />
						<TextBlock Text="Value"
								   FontWeight="Bold"
								   Margin="5"
								   Grid.Column="2"
								   VerticalAlignment="Center" />
						<TextBlock Text="Description"
								   FontWeight="Bold"
								   Margin="5"
								   Grid.Column="3"
								   VerticalAlignment="Center"/>
					</Grid>
				</Border>
				<ScrollViewer HorizontalScrollBarVisibility="Disabled">
					<ScrollViewer.Styles>
						<Style Selector="ItemsControl ContentPresenter:nth-child(even)">
							<Setter Property="Background" Value="{DynamicResource MaterialPaperBrush}" />
						</Style>
					</ScrollViewer.Styles>
					<ItemsControl ItemsSource="{Binding Items}">
						<ItemsControl.ItemTemplate>
							<DataTemplate>
								<Grid ColumnDefinitions="40, 150, 300, *, 50"
									  IsVisible="{Binding Visible}">
									<CheckBox Margin="5"
											  VerticalAlignment="Center"
											  IsChecked="{Binding Selected}" />
									<SelectableTextBlock Text="{Binding Name}"
														 FontWeight="Bold"
														 Margin="5"
														 VerticalAlignment="Center"
														 Grid.Column="1"/>
									<controls:CopyableQuantity Value="{Binding Value}"
															   Margin="5"
															   Grid.Column="2"
															   VerticalAlignment="Center"/>
									<SelectableTextBlock Text="{Binding Description}"
														 Margin="5"
														 VerticalAlignment="Center"
														 Grid.Column="3" />
									<Button Content="{materialIcons:MaterialIconExt Kind=Trash}"
											Grid.Column="4"
											VerticalAlignment="Center"
											Padding="3"
											Margin="5 5 20 5"
											Classes="Outline"
											Command="{Binding $parent[ItemsControl].DataContext.RemoveItemCommand}"
											CommandParameter="{Binding}"/>
								</Grid>
							</DataTemplate>
						</ItemsControl.ItemTemplate>
					</ItemsControl>
				</ScrollViewer>
			</DockPanel>
		</material:Card>
	</DockPanel>
</UserControl>
