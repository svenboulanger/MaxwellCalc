<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:MaxwellCalc.ViewModels"
			 xmlns:controls="using:MaxwellCalc.Controls"
			 xmlns:my="using:MaxwellCalc.Views"
			 xmlns:material="clr-namespace:Material.Styles.Controls;assembly=Material.Styles"
			 x:DataType="vm:BuiltInFunctionsViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MaxwellCalc.Views.BuiltInFunctionsView">
	<Design.DataContext>
		<vm:BuiltInFunctionsViewModel />
	</Design.DataContext>
	<UserControl.Styles>
		<Style Selector="TextBlock">
			<Setter Property="TextWrapping" Value="WrapWithOverflow" />
		</Style>
	</UserControl.Styles>
	<DockPanel>
		<material:Card DockPanel.Dock="Top"
			   Margin="5"
			   Padding="5">
			<TextBox Watermark="Search"
					 Height="20"
					 Text="{Binding Filter}" />
		</material:Card>
		<DataGrid IsReadOnly="True"
			  GridLinesVisibility="All"
			  CanUserResizeColumns="True"
			  CanUserSortColumns="True"
			  Margin="10"
			  SelectedItem="{Binding SelectedItem}"
			  ItemsSource="{Binding FilteredFunctions}">
			<DataGrid.Styles>

			</DataGrid.Styles>
			<DataGrid.Columns>
				<DataGridTextColumn Header="Function"
									Width="2*"
									Binding="{Binding Name}" />
				<DataGridTextColumn Header="Args"
									Width="*"
									Binding="{Binding ArgCountDescription}" />
				<DataGridTextColumn Width="5*"
									Header="Description"
									Binding="{Binding Description}" />
			</DataGrid.Columns>
		</DataGrid>
	</DockPanel>
</UserControl>
