<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:loc="using:MaxwellCalc.Controls"
			 xmlns:views="using:MaxwellCalc.Views"
			 xmlns:vm="using:MaxwellCalc.ViewModels"
			 xmlns:material="using:Material.Styles.Controls"
			 x:DataType="vm:UnitsViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MaxwellCalc.Views.UnitsView">
	<Design.DataContext>
		<vm:UnitsViewModel />
	</Design.DataContext>
	<SplitView IsPaneOpen="True"
			   OpenPaneLength="130"
			   CompactPaneLength="40"
			   DisplayMode="CompactInline">
		<SplitView.Pane>
			<ListBox SelectedIndex="{Binding SelectedListItem}"
					 Margin="5"
					 Padding="0">
				<ListBoxItem>Input units</ListBoxItem>
				<ListBoxItem>Output units</ListBoxItem>
			</ListBox>
		</SplitView.Pane>
		<SplitView.Content>
			<TransitioningContentControl Content="{Binding CurrentPage, Mode=OneWay}" />
		</SplitView.Content>
	</SplitView>
</UserControl>
