<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:MaxwellCalc.ViewModels"
			 xmlns:my="using:MaxwellCalc.Views"
			 xmlns:controls="using:MaxwellCalc.Controls"
			 xmlns:material="using:Material.Styles.Controls"
			 xmlns:materialIcons="using:Material.Icons.Avalonia"
			 x:DataType="vm:SettingsViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MaxwellCalc.Views.SettingsView">
	<Design.DataContext>
		<vm:SettingsViewModel />
	</Design.DataContext>
	<ScrollViewer HorizontalScrollBarVisibility="Disabled">
		<StackPanel>
			<StackPanel.Styles>
				<Style Selector="Grid > TextBlock">
					<Setter Property="Margin" Value="10" />
					<Setter Property="VerticalAlignment" Value="Center" />
				</Style>
				<Style Selector="ComboBox TextBlock">
					<Setter Property="Margin" Value="0" />
				</Style>
			</StackPanel.Styles>
			
			<material:Card Margin="10">
				<Grid ColumnDefinitions="*, 250"
					  RowDefinitions="Auto, Auto, Auto">
					<TextBlock Text="Theme"
							   Grid.Column="0"
							   Grid.Row="0" />
					<TextBlock Text="Primary color"
							   Grid.Column="0"
							   Grid.Row="1" />
					<TextBlock Text="Secondary color"
							   Grid.Column="0"
							   Grid.Row="2" />
					<ComboBox Grid.Column="1"
							  SelectedIndex="{Binding CurrentTheme}"
							  VerticalAlignment="Center">
						<TextBlock>Use default</TextBlock>
						<TextBlock>Light</TextBlock>
						<TextBlock>Dark</TextBlock>
					</ComboBox>
					<ComboBox Grid.Column="1"
							  Grid.Row="1"
							  SelectedItem="{Binding PrimaryColor}"
							  VerticalAlignment="Center"
							  ItemsSource="{Binding PrimaryColors}">
						<ComboBox.ItemTemplate>
							<DataTemplate>
								<TextBlock Text="{Binding}"
										   VerticalAlignment="Center"
										   Foreground="{Binding, Converter={x:Static my:ConverterHelpers.PrimaryColorConverter}}" />
							</DataTemplate>
						</ComboBox.ItemTemplate>
					</ComboBox>
					<ComboBox Grid.Column="1"
							  Grid.Row="2"
							  SelectedItem="{Binding SecondaryColor}"
							  VerticalAlignment="Center"
							  ItemsSource="{Binding SecondaryColors}">
						<ComboBox.ItemTemplate>
							<DataTemplate>
								<TextBlock Text="{Binding}"
										   VerticalAlignment="Center"
										   Foreground="{Binding, Converter={x:Static my:ConverterHelpers.SecondaryColorConverter}}" />
							</DataTemplate>
						</ComboBox.ItemTemplate>
					</ComboBox>
				</Grid>
			</material:Card>
			
			<material:Card Margin="10">
				<StackPanel>
					<ItemsControl ItemsSource="{Binding Workspaces}">
						<ItemsControl.ItemTemplate>
							<DataTemplate>
								<Grid ColumnDefinitions="*, Auto, Auto, Auto, Auto">
									<TextBlock Text="{Binding Name}"
											   Margin="10"
											   FontWeight="Bold"
											   VerticalAlignment="Center" />
									<Button Content="Use"
											IsVisible="{Binding !Selected}"
											Margin="5"
											Padding="10"
											Grid.Column="1"
											Command="{Binding $parent[ScrollViewer].DataContext.SelectWorkspaceCommand}"
											CommandParameter="{Binding}" />
									<Button Classes="Outline"
											Content="In use"
											IsVisible="{Binding Selected}"
											Margin="5"
											Padding="10"
											Grid.Column="1"
											IsEnabled="False" />
									<Button Content="{materialIcons:MaterialIconExt Kind=Edit}"
											Margin="5"
											Click="OnEditWorkspace"
											Padding="10"
											Grid.Column="2" />
									<Button Content="{materialIcons:MaterialIconExt Kind=ContentCopy}"
											Margin="5"
											Padding="10"
											Command="{Binding $parent[ScrollViewer].DataContext.DuplicateWorkspaceCommand}"
											CommandParameter="{Binding}"
											Grid.Column="3" />
									<Button Content="{materialIcons:MaterialIconExt Kind=Trash}"
											Classes="Outline Accent"
											Margin="5"
											Padding="10"
											Command="{Binding $parent[ScrollViewer].DataContext.RemoveWorkspaceCommand}"
											CommandParameter="{Binding}"
											Grid.Column="4" />
								</Grid>
							</DataTemplate>
						</ItemsControl.ItemTemplate>
					</ItemsControl>
					
					<Grid ColumnDefinitions="2*, *, Auto">
						<TextBox AcceptsReturn="False"
								 Grid.Column="0"
								 Margin="5"
								 Watermark="Name"
								 Text="{Binding NewWorkspaceName}" />
						<ComboBox Grid.Column="1"
								  Margin="4.5"
								  SelectedIndex="{Binding NewWorkspaceType}"
								  VerticalAlignment="Bottom">
							<TextBlock>Double</TextBlock>
							<TextBlock>Complex</TextBlock>
						</ComboBox>
						<Button Grid.Column="2"
								Margin="10"
								Padding="10"
								VerticalAlignment="Center"
								Command="{Binding AddWorkspaceCommand}"
								Content="{materialIcons:MaterialIconExt Kind=Add}" />
					</Grid>
				</StackPanel>
			</material:Card>
		</StackPanel>
	</ScrollViewer>
</UserControl>
