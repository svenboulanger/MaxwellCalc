<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:vm="using:MaxwellCalc.ViewModels"
		xmlns:my="using:MaxwellCalc.Views"
		xmlns:controls="using:MaxwellCalc.Controls"
		xmlns:material="using:Material.Styles.Controls"
		xmlns:materialIcons="using:Material.Icons.Avalonia"
		x:DataType="vm:WorkspaceViewModel"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="360"
        x:Class="MaxwellCalc.Views.WorkspaceView"
		SizeToContent="WidthAndHeight"
		CanResize="False"
		Topmost="True"
		ExtendClientAreaToDecorationsHint="True"
		WindowStartupLocation="CenterOwner"
        Title="{Binding Name}">
	<Design.DataContext>
		<vm:WorkspaceViewModel />
	</Design.DataContext>
	<StackPanel Width="500" Margin="0 30 0 0">
		<StackPanel.Styles>
			<Style Selector="Grid > TextBlock">
				<Setter Property="Margin" Value="10" />
				<Setter Property="VerticalAlignment" Value="Center" />
			</Style>
			<Style Selector="ComboBox TextBlock">
				<Setter Property="Margin" Value="0" />
			</Style>
		</StackPanel.Styles>

		<material:Card Margin="10">
			<Grid ColumnDefinitions="*, 250"
				  RowDefinitions="Auto, Auto">
				<TextBlock Text="Name"
						   Grid.Column="0"
						   Grid.Row="0" />
				<TextBlock Text="Type"
						   Grid.Column="0"
						   Grid.Row="1" />
				<TextBox Classes="dense"
						 Grid.Column="1"
						 Grid.Row="0"
						 Margin="0 0 0 15"
						 Watermark="Name"
						 AcceptsReturn="False"
						 AcceptsTab="False"
						 Text="{Binding Name}"
						 UseFloatingWatermark="False" />
				<TextBlock Text="{Binding DomainType}"
						   Margin="0 10"
						   Grid.Row="1"
						   Grid.Column="1" />
			</Grid>
		</material:Card>

		<material:Card Margin="10">
			<Grid ColumnDefinitions="3*, 250"
				  RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto">
				<TextBlock Text="Result format"
						   Grid.Column="0"
						   Grid.Row="1" />
				<TextBlock Text="Digits"
						   Grid.Column="0"
						   Grid.Row="2" />
				<ComboBox Grid.Column="1"
						  Grid.Row="1"
						  SelectedIndex="{Binding FormatIndex}"
						  VerticalAlignment="Center">
					<TextBlock>Shortest</TextBlock>
					<TextBlock>Scientific</TextBlock>
					<TextBlock>Fixed</TextBlock>
				</ComboBox>
				<Grid ColumnDefinitions="*, 50"
					  Grid.Column="1"
					  Grid.Row="2">
					<Slider Minimum="1"
							Maximum="12"
							Grid.Column="0"
							Value="{Binding Digits}"
							Margin="10 30 0 10"/>
					<TextBlock Text="{Binding Digits, Mode=OneWay}"
							   Margin="20 29 0 10"
							   VerticalAlignment="Center"
							   Grid.Column="1" />
				</Grid>
			</Grid>
		</material:Card>

		<Button Content="OK"
				Margin="10"
				Grid.Column="1"
				Click="OnClose"/>
	</StackPanel>
</Window>
